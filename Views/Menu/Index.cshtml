@model IEnumerable<Touch_Bistro_App.Models.MenuItem>

@{
    ViewData["Title"] = "Menu";
    int orderId = ViewBag.OrderId;
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Menu</h2>
        <a asp-controller="Orders" asp-action="Details" asp-route-id="@orderId" class="btn btn-lg btn-primary">
            View Order <i class="bi bi-cart"></i>
        </a>
    </div>

    <div class="row">
        @foreach (var category in Model.Select(m => m.Category).Distinct())
        {
            <div class="col-12 mt-3 mb-2">
                <h3>@category</h3>
                <hr />
            </div>
            @foreach (var item in Model.Where(m => m.Category == category))
            {
                <div class="col-md-4 mb-3">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">@item.Name</h5>
                            <p class="card-text">@item.Description</p>
                            <p class="card-text fw-bold">@item.Price.ToString("C")</p>
                            <form asp-action="AddToOrder" method="post">
                                <input type="hidden" name="orderId" value="@orderId" />
                                <input type="hidden" name="menuItemId" value="@item.Id" />
                                <button type="submit" class="btn btn-success w-100">Add to Order</button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>
